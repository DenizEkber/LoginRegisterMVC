@{
}
@model SetPasswordViewModel
<link rel="stylesheet" href="~/css/setPassword.css">

<div class="conta">
    <div class="password-page">
        <div class="password">
            <div class="password-container">
                <h1>Set a password</h1>
                <p>An authentication code has been sent to your email.</p>
                <form method="post">
                    <div class="input-group">
                        <label for="createPassword">Create Password</label>
                        <input type="password" id="createPassword" name="CreatePassword" placeholder="7789BM6X@@H&$K_">
                        <span asp-validation-for="CreatePassword"></span>
                    </div>
                    <div class="input-group">
                        <label for="reenterPassword">Re-enter Password</label>
                        <input type="password" id="reenterPassword" name="ReEnterPassword" placeholder="7789BM6X@@H&$K_">
                        <span asp-validation-for="ReEnterPassword"></span>
                    </div>
                    <button asp-controller="SetPassword" asp-action="SetPassword" type="submit" class="password-btn">Set Password</button>
                </form>
            </div>
        </div>
    </div>
    <div class="password-photo">
        <img src="~/icon/passwordReset.png" alt="Password Illustration">
    </div>
</div>


