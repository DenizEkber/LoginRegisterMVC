<link rel="stylesheet" href="~/css/verifyCode.css">

<div class="conta">
    <div class="verify-page">
        <div class="verify">
            <div class="verify-container">
                <a class="back-login" href="#">&lt; Back to login</a>
                <h1>Verify Code</h1>
                <p>An authentication code has been sent to your email.</p>
                <form>
                    <div class="input-group">
                        <label for="verifyCode">Enter Code</label>
                        <input type="text" id="verifyCode" name="verifyCode" placeholder="7789BM6X">
                    </div>
                    <p>Didn’t receive a code? <a href="#">Resend</a></p>
                    <button type="submit" class="verify-btn">Verify</button>
                </form>
            </div>
        </div>
    </div>
    <div class="verify-photo">
        <img src="~/icon/Verify.png" alt="Verify Illustration">
    </div>
</div>


